<div class="new-post">
  <h2>New Post Form</h2>
  <%= form_with model: Post.new, url: post_create_path, method: :post, class: 'form' do |f| %>
    <h2><%= f.label :title, 'Post Title' %></h2>
    <%= f.text_field :title %>
    <h2><%= f.label :text, 'Post Content' %></h2>
    <%= f.text_area :text %>
    <button><%= f.submit "Add Post" %></button>
  <% end %>
</div>
<div class="post-card">
  <%= link_to user_post_path(post.user, post) do %>
    <h2>Post ID#<%= post.id%> <%= post.title %></h2>
  <% end %>
  <p class='post-content'><%= post.text.length > 120 ? post.text.first(100) + '...' : post.text %></p>
  <h3 class='post-stats'>Comments: <%= post.comments_counter %>, Likes: <%= post.likes_counter %></h3>
  <% if can? :manage, post %>
    <%= button_to "Delete", post_destroy_path(post.user, post), method: :delete, class: "btn btn-danger" %>
  <% end %>
</div>
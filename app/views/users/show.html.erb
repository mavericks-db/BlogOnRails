<%= render partial: 'users/user_card', locals: { user: @user } %>
<%= render partial: 'users/bio_card', locals: { user: @user } %>

<div class='post-show'>
  <% @recent_posts.each do |post| %>
      <%= render partial: 'posts/post_card', locals: { post: post } %>
  <% end %>
  <div class='post-buttons'>
    <button><%= link_to 'See all posts', user_posts_path(@user) %></button>
    <button>Create a new post</button>
  </div>
</div>
